datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  Int       @id @default(autoincrement())
  username            String    @unique
  firstName           String
  lastName            String
  email               String    @unique
  password            String
  walletAddress       String?   
  createdAt           DateTime  @default(now())
  nfts                NFT[]
}

model NFT {
  id                  Int       @id @default(autoincrement())
  fileUrl             String  
  price               Float
  name                String 
  description         String?
  royalties           Float
  createdAt           DateTime  @default(now())
  ownerId             Int
  owner               User      @relation(fields: [ownerId], references: [id])
}
